<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.side.wiki.mapper.DocumentMapper">
	<resultMap type="com.side.wiki.vo.DocumentVO" id="doc">
		<result column="doc_title" property="docTitle" />
		<result column="doc_content" property="docContent" />
		<result column="doc_date" property="docDate"
			javaType="java.util.Date" />
		<result column="doc_id" property="docId" />
	</resultMap>

	<select id="getDoc" resultMap="doc">
		select * from doc where doc_title
		= #{docTitle}
	</select>

	<insert id="insertDoc">
		insert into doc(doc_title, doc_content, doc_id)
		values(#{docTitle}, #{docContent}, doc_seq.nextval)
	</insert>

	<update id="updateDoc">
		update doc set doc_content = #{docContent}, doc_date
		= sysdate where doc_title = #{docTitle}
	</update>

	<delete id="deleteDoc">
		delete from doc where doc_title = #{docTitle}
	</delete>

	<select id="getRandomDoc" resultMap="doc">
		select *
		from
		(select * from doc order by dbms_random.value)
		where rownum = 1
	</select>
	
	<select id="getDocList" resultType="arraylist" resultMap="doc">
		select * from doc
	</select>


</mapper>